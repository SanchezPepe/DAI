<Window x:Class="IngenieriaItam.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="ITAM" Height="184.4" Width="265.8" Loaded="Window_Loaded">
    <Grid>
        <Grid.Background>
            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                <GradientStop Color="Black" Offset="0"/>
                <GradientStop Color="#FFDBF0D1"/>
            </LinearGradientBrush>
        </Grid.Background>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <ComboBox x:Name="cbProgramas" HorizontalAlignment="Left" Margin="90,50,0,0" VerticalAlignment="Top" Width="120"/>
        <Label x:Name="lbItam" Content="Programas Ingeniería ITAM&#xA;" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Height="35" FontSize="16"/>
        <Label x:Name="lbProgramas" Content="Programas" HorizontalAlignment="Left" Margin="10,50,0,0" VerticalAlignment="Top"/>
        <Button x:Name="btSelecciona" Content="Selección" HorizontalAlignment="Left" Margin="90,93,0,0" VerticalAlignment="Top" Width="120" Height="23" Click="btSelecciona_Click"/>

    </Grid>
</Window>
